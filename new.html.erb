<%= form_for @item, url: mainc_url do |f| %>
  <div class="form-group">
    <%= f.label :name%>
    <%= f.text_field :name%>
  </div>
  <div class="form-group">
    <%= f.label :price %>
    <%= f.number_field :price, step: '0.01' %>
  </div>
  <div class="form-group">
    <%= f.hidden_field :image, value: @item.cached_image_data %>
    <%= f.file_field :image %>
  </div>
  <%= f.submit 'Add', class: 'btn btn-primary' %>
<% end %>
