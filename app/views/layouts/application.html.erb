<!DOCTYPE html>
<html>
  <head>
    <title>Sample</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <%= link_to 'Shaurmak', '', :class => 'navbar-brand' %>
  <button class="navbar-toggler" type="button" data-toggle="collapse navbar-collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto"> 
      <li class="nav-item">
        <%= link_to 'Home', root_url, :class => 'nav-link'%>
      </li>
     <% if is_adm %>
      <li class="nav-item">
        <%= link_to 'All orders', orders_index_url, :class => 'nav-link'%>
      </li>
      <li class="nav-item">
        <%= link_to 'All users', registered_index_url, :class => 'nav-link'%>
      </li>
      <li class="nav-item">
        <%= link_to 'Edit menu', menu_new_url, :class => 'nav-link'%>
      </li>
      <% end %>
     </ul>
     <p class="navbar-text float-right">
      <% unless user_signed_in? %>
        <%= link_to 'Register', new_user_registration_path, :class => "btn btn-outline-primary" %>
        <%= link_to 'Login', new_user_session_path, :class => "btn btn-outline-secondary" %>
      <% else %>
        <%= link_to 'Edit profile', edit_user_registration_path, :class => 'btn btn-outline-primary' %>
        <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'btn btn-outline-secondary'  %>
      <% end %>
      </p>
  </div>
  </nav>
    <% if notice %>
      <p class="alert alert-success"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>
    <%= yield %>
  </body>
</html>
